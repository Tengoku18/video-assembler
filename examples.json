  "n8n_workflow_snippets": {
    "http_request_basic": {
      "method": "POST",
      "url": "https://your-app.onrender.com/assemble",
      "authentication": "None",
      "sendBody": true,
      "bodyContentType": "json",
      "responseFormat": "file",
      "jsonParameters": true
